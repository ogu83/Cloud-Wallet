<Window x:Class="CloudWallet.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="100" Width="300" 
        WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" 
        FontSize="14" Background="Brown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <PasswordBox x:Name="passwordBox" Margin="3" VerticalContentAlignment="Center" KeyUp="PasswordBox_KeyUp_1" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOK" IsDefault="True" Content="OK" Grid.Column="1" Margin="3" Click="btnOK_Click_1" />
            <Button x:Name="btnCancel" IsCancel="True" Content="Cancel" Grid.Column="2" Margin="3" Click="btnCancel_Click_1"/>
        </Grid>
    </Grid>
</Window>
