        <TextBox x:Name="EmailTo" HorizontalAlignment="Left" Height="25" Margin="58,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" RenderTransformOrigin="0.57,0.86"/>
        <TextBox x:Name="EmailFrom" HorizontalAlignment="Left" Height="27" Margin="58,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169"/>
        <Label Content="To:" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
        <Label Content="From:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Lbstats" Content="States: " HorizontalAlignment="Left" Margin="12,111,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontSize="13"/>

    </Grid>
</Window>
