        Title="Upload to Wallet Server" Height="173.134" Width="325.373" Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" HorizontalAlignment="Right" VerticalAlignment="Center">
