        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Uploadbtn" Content="Send" HorizontalAlignment="Left" Margin="232,71,0,0" VerticalAlignment="Top" Width="76" Height="27" Click="Uploadbtn_Click" RenderTransformOrigin="1.309,-0.315" Grid.ColumnSpan="3"/>
        <TextBox x:Name="UploadFile" Height="29" Margin="10,10,3,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" Text="Wallet / Package Path"/>
